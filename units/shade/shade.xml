<?xml version="1.0" standalone="no"?>

<unit>

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="950" regeneration="7"/>
		<max-ep value="1000" regeneration="100"/>
		<armor value="50"/>
		<armor-type value="metal"/>					
		<sight value="16"/>
		<time value="100"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements/>
		<upgrade-requirements>
			<upgrade name="seething_of_the_blazes"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="150"/>
			<resource name="energy" amount="1"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/alliyp.bmp"/>
		<image-cancel path="../dark_elder/images/dark_magic_cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false"/>
		<command-sounds enabled="false"/>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/standing.g3d"/>
			<particles value="true">
				<!--particle-file path="fire_particles.xml"/-->
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="smoke_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="180"/>
			<anim-speed value="70"/>
			<animation path="models/walking.g3d"/>
			<particles value="true">
				<!--particle-file path="fire_particles.xml"/-->
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="smoke_particles2.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="200"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="models/attacking.g3d"/>
			<sound enabled="false"/>
			<attack-strenght value="650"/>
			<attack-var value="100"/>
			<attack-range value="14"/>
			<attack-type value="energy"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<attack-start-time value="0.15"/>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="80"/>
			<anim-speed value="25"/>
			<animation path="models/dying.g3d"/>
			<particles value="true">
				<particle-file path="smoke_die_particles.xml"/>
			</particles>
			<sound enabled="false"/>
			<fade value="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="40"/>
			<animation path="models/standing.g3d"/>
			<sound enabled="false"/>			
		</skill>
	</skills>
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../dark_elder/images/dark_magic_stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value= "move"/>
			<name value="move"/>
			<image path="../dark_elder/images/dark_magic_move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value= "attack"/>
			<name value="attack"/>
			<image path="images/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

    <command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../dark_elder/images/dark_magic_hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>
